<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9C27B0"
    android:backgroundTint="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="cursive"
        android:outlineAmbientShadowColor="#C3F10707"
        android:text="The Gang Finds Simon"
        android:textColor="#E4051310"
        android:textSize="44dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/picture"
        android:layout_width="250dp"
        android:layout_height="115dp"
        android:layout_below="@id/title"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:scaleX="2"
        android:scaleY="2"
        app:srcCompat="@mipmap/maxresdefault" />

    <Button
        android:id="@+id/start"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/picture"
        android:layout_toLeftOf="@+id/medium"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="80dp"
        android:background="#050101"
        android:text="@string/easy_name"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/medium"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/picture"
        android:layout_centerVertical="true"
        android:layout_marginTop="80dp"
        android:background="#050101"
        android:text="@string/medium_name"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/hard"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/medium"
        android:layout_below="@id/picture"
        android:layout_centerVertical="true"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:background="#050101"
        android:text="@string/hard_name"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/headBlue"
        android:layout_width="107dp"
        android:layout_height="101dp"
        android:layout_below="@id/start"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/charliesblue" />
    <ImageView
        android:id="@+id/headRed"
        android:layout_width="107dp"
        android:layout_height="101dp"
        android:layout_below="@id/start"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/charliesred"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:id="@+id/headGreen"
        android:layout_width="107dp"
        android:layout_height="101dp"
        android:layout_below="@id/headBlue"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@mipmap/charliesgreen" />
    <ImageView
        android:id="@+id/headYellow"
        android:layout_width="107dp"
        android:layout_height="101dp"
        android:layout_below="@id/headRed"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@mipmap/charliesyellow"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/mac"
        android:layout_width="310dp"
        android:layout_height="218dp"
        android:layout_below="@id/start"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="61dp"
        app:srcCompat="@mipmap/mac" />


</RelativeLayout>